{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ]
}
